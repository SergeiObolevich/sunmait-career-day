{
  "compilerOptions": {
    "moduleResolution": "node",
    "outDir": "./build/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "baseUrl": "./app",
    "rootDir": "./app",
    "paths": {
      "app/*": [ "app/*" ],
      "redux/*": [ "redux/*" ],
      "components/*": [ "components/*" ],
      "types/*": [ "types/*" ]
    } 
  },
  "include": [
    "./app/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}