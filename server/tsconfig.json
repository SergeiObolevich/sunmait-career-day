{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "lib": ["es6"],
    "sourceMap": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["API/**/*.ts", "Data/**/*.ts", "Domain/**/*.ts"],
  "exclude": ["node_modules"]
}
